<!doctype html>
<html>

  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <!-- Header hook for plugins -->
    {{ content_for_header }}
    <!-- Style & script tag -->
    {% comment %} <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,700" rel="stylesheet"> {% endcomment %}
    {% comment %} <link href="https://fonts.googleapis.com/css?family=Poppins:400,400i,500,600,700" rel="stylesheet">  {% endcomment %}

    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'plugins.css' | asset_url | stylesheet_tag }}
    {{ 'style.css' | asset_url | stylesheet_tag }}
  {{ 'custom.css' | asset_url | stylesheet_tag }}

    {% comment %} <!-- Tailwind & Alpine plugin --><script src="https://cdn.tailwindcss.com"> </script> {% endcomment %}
    {% comment %} <script defer src="https://unpkg.com/alpinejs@3.10.2/dist/cdn.min.js"></script> {% endcomment %}
  </head>

  <body>
    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% comment %} js script link  {% endcomment %}

    {{ 'amodernizr-3.6.0.min.js' | asset_url | script_tag }}
    {{ 'jquery.min.js' | asset_url | script_tag }}
    {{ 'popper.min.js' | asset_url | script_tag }}
    {{ 'bootstrap.min.js' | asset_url | script_tag }}
    {{ 'plugins.js' | asset_url | script_tag }}
    {{ 'main.js' | asset_url | script_tag }}

  </body>
</html>