<div class="header-bottomarea">
  <div class="container">
      <div class="header-bottominner">
          <div class="header-logo">
            {% if section.settings.logo != blank %}
              <a href="/">
                <img
                src=" {{ section.settings.logo | img_url: 'master' }} " alt="dialia logo">
              </a>
            {% else %}
              <a href="/">
                Dialia
              </a>
            {% endif %}
          </div>
          <nav class="tm-navigation">
                      <ul>
                        {%- for link in section.settings.menu.links -%}
                           {%- if link.links != blank -%}
                          <li class="tm-navigation-dropdown">   
                              <a href="{{ link.url }}">{{ link.title }}</a> <i class="fa-solid fa-chevron-down"></i>                          
                              <ul>
                                 {%- for childlink in link.links -%}
                                  {%- if childlink.links == blank -%}
                                  <li>
                                     <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                                  </li>
                                    {% else %}
                                    <li>
                                        <a href="{{ childlink.url }}">{{ childlink.title }}</a> <i class="fa-solid fa-angle-right"></i>
                                   
                                     <ul>
                                       {%- for grandchildlink in childlink.links -%}
                                         <li>
                                           <a href="{{ grandchildlink.url }}">{{ grandchildlink.title }}</a>
                                         </li>
                                       {%- endfor -%}
                                     </ul>
                                     </li>
                                     {% endif %}
                                {%- endfor -%}
                              </ul>
                          </li>
                          {% else %}
                             <li>
                                <a href="{{ link.url }}">{{ link.title }}</a>
                             </li>
                            {% endif %}
                        {% endfor %}
                      </ul>
          </nav>
          <div class="header-icons">
              <ul>
                  <li><a href="{{ routes.cart_url }}"><i class="fa-sharp fa-solid fa-cart-shopping"></i></a></li>
                  <li><a href="{{ routes.search_url }}" class="header-searchtrigger"><i class="fa-solid fa-magnifying-glass"></i></a></li>
                  <a href="{{ routes.account_login_url}}">Login</a>
                  <a href="{{ routes.account_logout_url }}">Logout</a>
              </ul>
          </div>
          <div class="header-searchbox">
              <div class="header-searchinner">
                  <form action="{{ routes.search_url }}" method="get" class="header-searchform">
                      <input type="search" name="q" placeholder="Enter search keyword..">
                  </form>
                  <button class="search-close"><i class="zmdi zmdi-close"></i></button>
              </div>
          </div>
      </div>
      <div class="header-mobilemenu clearfix">
          <div class="tm-mobilenav"></div>
      </div>
  </div>
</div>



{% schema %}
  {
    "name": "header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
     {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Choose Menu"
    }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}
