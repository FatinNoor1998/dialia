<style>
.error {
    color: red;
    margin-top: 30px;
    background: lightpink;
}
  .hide-login{
    display: none;
  }
</style>
        
        <!-- Breadcrumb Area -->
        <div class="tm-breadcrumb-area tm-padding-section" data-bgimage="https://cdn.shopify.com/s/files/1/0732/0607/1579/files/breadcrumb-bg.jpg?v=1680011307"
            data-black-overlay="4">
            <div class="container">
                <div class="tm-breadcrumb text-center">
                    <h2>Login & Register</h2>
                    <ul>
                        <li><a href="https://dialia-rmt-store.myshopify.com/">Home/</a></li>
                        <li><a href="{{ routes.account_addresses_url }}">My Account/</a></li>
                        <li>Login & Register</li>
                    </ul>
                </div>
            </div>
        </div>
        
        
        <main class="main-content">

            <!-- Login Register Area -->
            <div class="tm-section tm-login-register-area bg-white tm-padding-section">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-6 login">
                          {% form 'customer_login', class:'tm-form tm-login-form' %}
                                <h4>Login</h4>
                                <div class="tm-form-inner">
                              {% if form.errors %}
                              <div class="error" role="alert">
                                <strong class="red-color">Errorr!</strong>
                                <p class="red-text">{{ form.errors | default_errors }}</p>
                              </div>
                              {% endif %}
                                    <div class="tm-form-field">
                                        <label for="login-email">Username or email address*</label>
                                        <input type="email" name="customer[email]" id="login-email" autocomplete="email" required>
                                    </div>
                                    <div class="tm-form-field">
                                        <label for="login-password">Password*</label>
                                        <input type="password" name="customer[password]" id="login-password" required="required">
                                    </div>
                                    <div class="tm-form-field">
                                        <input type="checkbox" name="login-remember" id="login-remember">
                                        <label for="login-remember">Remember Me</label>
                                    </div>
                                    <div class="tm-form-field">
                                        <button type="submit" class="tm-button">Login <b></b></button>
                                    </div>
                                    <div class="tm-form-field reset-pass">
                                        <a href="/">Forgot your password?</a>
                                    </div>
                                </div>
                           {% endform %}
                        </div>
                      

                       <div class="col-lg-6" x-show="pwRecover">
                         {% form 'reset_customer_password' %}
                          <h4>Reset Password</h4>
                          <div class="tm-form-inner">
                            <div class="tm-form-field">
                                <label for="email">Email</label>
                                 <input type="email" name="customer[email]" id="email" autocomplete="email" required>
                            </div>
                            <div class="tm-form-field">
                                  <button type="submit" class="tm-button">Reset password <b></b></button>
                             </div>
                          </div>
                         {% endform %}
                       </div>

                      
                        <div class="col-lg-6">
                            <form action="#" class="tm-form tm-register-form">
                                <h4>Create an account</h4>
                                <div class="tm-form-inner">
                                    <div class="tm-form-field">
                                        <label for="register-username">Username</label>
                                        <input type="text" id="register-username" required="required">
                                    </div>
                                    <div class="tm-form-field">
                                        <label for="register-email">Email address</label>
                                        <input type="email" id="register-email" required="required">
                                    </div>
                                    <div class="tm-form-field">
                                        <label for="register-password">Password</label>
                                        <input type="password" id="register-password" name="register-pass" required="required">
                                    </div>
                                    <div class="tm-form-field">
                                        <div>
                                            <input type="checkbox" id="register-pass-show" name="register-pass-show">
                                            <label for="register-pass-show">Show Password</label>
                                        </div>
                                        <div>
                                            <input type="checkbox" id="register-terms" name="register-terms">
                                            <label for="register-terms">I have read and agree to the website <a href="#">terms and
                                                conditions</a></label>
                                        </div>
                                    </div>
                                    <div class="tm-form-field">
                                        <button type="submit" class="tm-button">Register <b></b></button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <!--// Login Register Area -->

        </main>


<script>
 let login = document.querySelector(".tm-section.tm-login-register-area.bg-white.tm-padding-section .container .row .col-lg-6.login");
  document.querySelector(".tm-section.tm-login-register-area.bg-white.tm-padding-section .container .row .col-lg-6.login .tm-form-field.reset-pass").addEventListener('click', e=> {
    e.classList.add("hide";)
 })
</script>

