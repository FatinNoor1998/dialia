<!-- Heroslider Area -->
<div class="heroslider-area" data-bgimage="{{ section.settings.slider_bg | img_url: 'master' }}" data-black-overlay="3">

    <!-- Heroslider Slider -->
    <div class="heroslider-slider heroslider-animated tm-slider-dots tm-slider-dots-left" data-white-overlay="7">

        {% for block in section.blocks %}

            <!-- Heroslider Single -->
            <div class="heroslider-singleslider d-flex align-items-center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-7 col-md-6 col-12 order-2 order-md-1">
                            <div class="heroslider-content">
                                <h1>{{ block.settings.slider_heading }}</h1>
                                <p>{{ block.settings.slider_sub_text }}</p>
                                <a href="about-us.html" class="tm-button">{{ block.settings.slider_button_text }}</a>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-6 col-sm-8 col-12 order-1 order-md-2">
                            <div class="heroslider-image">
                                <svg viewBox="0 0 665 645">
                                    <defs>
                                        <pattern id="attachedImage1" height="100%" width="100%" patternContentUnits="objectBoundingBox">
                                            <image xlink:href="{{ block.settings.slider_image  | img_url: 'master'}}"
                                                preserveAspectRatio="none" width="1" height="1" />
                                        </pattern>
                                    </defs>
                                    <path fill="url(#attachedImage1)" d="M277.030,1.101 C452.838,-10.886 534.393,78.587 579.557,198.565 C624.722,318.542 691.616,359.832 645.425,497.920 C599.233,636.008 432.396,654.275 367.205,638.129 C302.015,621.984 234.375,580.155 153.191,548.742 C32.427,502.014 2.584,440.527 0.176,379.950 C-3.230,294.260 41.806,284.689 56.287,190.747 C73.638,78.186 139.502,10.477 277.030,1.101 Z"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--// Heroslider Single -->
            
        {% endfor %}

     

    </div>
    <!--// Heroslider Slider -->

</div>
<!--// Heroslider Area -->


{% schema %}
{
   "name": "Slider",
   "max_blocks":5,
   "settings":[
    {
       "type": "image_picker",
       "id":"slider_bg",
       "label":"Slider Background Image"
    }
   ],
   "blocks":[
    {
       "type": "slide",
       "name": " Slide Item",
       "settings":[
        {
           "type": "text",
           "id":"slider_heading",
           "label":"Slider Heading Text"
        },
        {
           "type": "text",
           "id":"slider_sub_text",
           "label":"Slider Sub Heading"
        },
        {
           "type": "text",
           "id":"slider_button_text",
           "label":"Slider Button Text"
        },
        {
           "type": "url",
           "id":"slider_button_url",
           "label":"Slider Button url"
        },
        {
           "type": "image_picker",
           "id":"slider_image",
           "label":"Slider Image "
        }
       ]
    }
   ],
  "presets": [
      {
          "category": "Slider",
          "name":"Slider"
      }
  ]
}
{% endschema %}