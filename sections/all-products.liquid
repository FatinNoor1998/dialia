      "min": 8,
      "max": 24,
      "step": 1,
      "default": 9,
      "label": "Products Per Page"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection list for best selling"
    }
    ],
    "presets": [
    {
        "category": "content",
        "name":"all-products"
    }
]
  }
{% endschema %}

