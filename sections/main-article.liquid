                                        </ul>
                                    </div>

                                  {% if blog.comments_enabled? %}
                                    <!-- Blogitem Comments -->
                                    <div class="blogitem-comments mt-50">
                                    
                                     {% if article.comments_count > 0 %}
                                      
                                        <h5 class="small-title">Comments ({{ article.comments_count }})</h5>

                                        <div class="tm-comment-wrapper">
                                      {% for comment in article.comments %}
                                            <!-- Comment Single -->
                                            <div class="tm-comment">
                                                <div class="tm-comment-thumb">
                                                    <img src="https://cdn.shopify.com/s/files/1/0732/0607/1579/files/team-member-6.jpg?v=1680010648" alt="author image">
                                                </div>
                                                <div class="tm-comment-content">
                                                    <h6 class="tm-comment-authorname"><a href="#">{{ comment.author }}</a></h6>
                                                    <span class="tm-comment-date">{{ comment.created_at }}</span>
                                                    <p>{{ comment.content }}</p>
                                                    <a href="#" class="tm-comment-replybutton"><i class="zmdi zmdi-mail-reply-all"></i>
